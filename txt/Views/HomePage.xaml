<Page
    x:Class="txt.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    Background="#36393f"
    mc:Ignorable="d">
    <!--LINE BREAK: &#x0a;&#x0a;-->
    <Grid x:Name="ContentArea"
          Margin="{StaticResource SmallLeftTopRightBottomMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="txt"
                   Grid.Row="1"
                   FontSize="30"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="A open-source text editor&#x0a;&#x0a;Made with ❤️ from GitHub and 324Hz"
                   Grid.Row="2"
                   FontSize="15"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="0,0,0,0"></TextBlock>

        <TextBox AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Margin="0,100,0,0"
                 Height="760"
                 Grid.Row="2"
                 Background="#36393f"
                 Name="TextBox"/>

        <Button Content="Home"
                Background="#ff6363"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2" 
                Margin="0,0,0,0"
                Click="Home_Click"
                Grid.Row="1"
                Height="30"
                Width="100"/>
        <Button Content="About"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2" 
                Margin="110,0,0,0"
                Click="About_Click"
                Grid.Row="1"
                Height="30"
                Width="100"/>
        <Button Content="Version"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2" 
                Margin="220,0,0,0"
                Click="Version_Click"
                Grid.Row="1"
                Height="30"
                Width="100"/>
        <Button Content="Settings"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2"
                Margin="330,0,0,0"
                Click="Settings_Click"
                Grid.Row="1"
                Height="30"
                Width="100"/>

        <Button Content="Select a file"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2"
                Margin="440,0,0,0"
                HorizontalAlignment="Left"
                Click="buttonfilepick_Click"
                Grid.Row="1"
                Height="30"
                Width="100"/>
        <TextBlock Text=""
                   Grid.Row="1"
                   FontSize="11"
                   FontFamily="Consolas"
                   Margin="700,0,0,0"
                   HorizontalAlignment="Right"
                   Height="30"
                   Width="300"
                   Name="TextBlockoutput"></TextBlock>

        <TextBlock Text="| Licensed under the MIT license | © 324Hz 2022 | v0.1.0.12 |"
                   Grid.Row="18"
                   FontSize="15"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,50,0,0"></TextBlock>
    </Grid>
</Page>
