<Page
    x:Class="txt.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    Background="#36393f"
    mc:Ignorable="d">
    <!--LINE BREAK: &#x0a;&#x0a;-->
    <Grid x:Name="ContentArea">
        <TextBlock Text="txt"
                   FontSize="30"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"></TextBlock>
        <TextBlock Text="A open-source text editor&#x0a;&#x0a;Made with ❤️ from GitHub and 324Hz"
                   FontSize="15"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="0,50,0,0"></TextBlock>

        <TextBox AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalAlignment="Bottom"
                 Margin="0,0,0,100"
                 Height="690"
                 Background="#36393f"
                 Name="TextBox"/>

        <Button Content="Home"
                Background="#ff6363"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2" 
                Margin="10,10,0,0"
                Click="Home_Click"
                VerticalAlignment="Top"
                Height="30"
                Width="100"/>
        <Button Content="About"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2" 
                Margin="120,10,0,0"
                Click="About_Click"
                VerticalAlignment="Top"
                Height="30"
                Width="100"/>
        <!--REMOVE ALL GRID.ROWS IN ALL OF THE FILES AS THEY ARE NOT NEEDED ANYMORE-->
        <Button Content="Version"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2" 
                Margin="230,10,0,0"
                Click="Version_Click"
                VerticalAlignment="Top"
                Height="30"
                Width="100"/>
        <Button Content="Settings"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2"
                Margin="340,10,0,0"
                Click="Settings_Click"
                VerticalAlignment="Top"
                Height="30"
                Width="100"/>
        <Button Content="Test Page"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2"
                Margin="450,10,0,0"
                Click="Test_Click"
                VerticalAlignment="Top"
                Height="30"
                Width="100"/>

        <TextBlock Text="| Licensed under the MIT license | © 324Hz 2022 | v0.1.0.12 |"
                   FontSize="15"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,50,0,0"></TextBlock>
    </Grid>
</Page>
