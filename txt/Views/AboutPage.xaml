<Page
    x:Class="txt.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:txt.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:Name="ContentArea"
          Margin="{StaticResource SmallLeftTopRightBottomMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="About"
                   Grid.Row="1"
                   FontSize="30"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="This application will hopefully turn into a open-source text editor which (although might not look nice) will be able to edit and save text files and do many other things."
                   Grid.Row="2"
                   FontSize="15"
                   FontFamily="Consolas"
                   TextWrapping="WrapWholeWords"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"></TextBlock>
        <TextBlock Text="This application is written in C# and uses the .NET Framework 4.5.2."
                   Grid.Row="3"
                   FontSize="15"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,0"></TextBlock>

        <TextBlock Text="My blog website: https://324-lines-of-code.netlify.app"
                   Grid.Row="3"
                   FontSize="15"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   Margin="0,140,0,0"></TextBlock>
        <HyperlinkButton Content="My main website"
                         NavigateUri="https://324hz.dev"
                         Grid.Row="3"
                         FontSize="15"
                         FontFamily="Consolas"
                         HorizontalAlignment="Center"
                         Margin="0,140,0,0"/>

        <Button Content="Home"
                Style="{StaticResource AccentButtonStyle}"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2" 
                Margin="0,0,0,0"
                Click="Home_Click"
                Grid.Row="1"
                Height="30"
                Width="100"/>
        <Button Content="About"
                Style="{StaticResource AccentButtonStyle}"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2" 
                Margin="110,0,0,0"
                Click="About_Click"
                Grid.Row="1"
                Height="30"
                Width="100"/>
        <Button Content="Settings"
                Style="{StaticResource AccentButtonStyle}"
                FontFamily="Consolas"
                FontSize="11"
                CornerRadius="2"
                Margin="220,0,0,0"
                Click="Settings_Click"
                Grid.Row="1"
                Height="30"
                Width="100"/>
    </Grid>
</Page>
